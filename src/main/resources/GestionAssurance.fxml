<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.collections.FXCollections?>

<?import java.net.URL?>
<ScrollPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/22.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionAssurance">
    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>

    <content>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Section supérieure : Recherche, filtres, tri et statistiques -->
            <VBox spacing="10" style="-fx-border-color: gray; -fx-padding: 10;">
                <Label text="Recherche et filtres" style="-fx-font-weight: bold;" />
                <HBox spacing="10">
                    <TextField fx:id="tfSearch" prefWidth="250.0" promptText="Rechercher par nom" />
                    <Button mnemonicParsing="false" onAction="#rechercherAssurances" text="Rechercher" />
                </HBox>
                <HBox spacing="10">
                    <ComboBox fx:id="cbFiltreType" prefWidth="200.0" promptText="Filtrer par type" />
                    <ComboBox fx:id="cbTriDate" prefWidth="200.0" promptText="Filtrer par date"/>
                </HBox>
                <PieChart fx:id="pieChartStats" prefWidth="950.0" prefHeight="200.0" />
                <Button mnemonicParsing="false" onAction="#testerStats" text="Tester les statistiques" />
            </VBox>

            <!-- Section centrale : Formulaire d'ajout/modification -->
            <VBox spacing="10" style="-fx-border-color: gray; -fx-padding: 10;">
                <Label text="Gestion des assurances" style="-fx-font-weight: bold;" />
                <Label text="Nom :" />
                <TextField fx:id="tfNom" promptText="Entrez le nom" />
                <Label text="Type d'assurance :" />
                <ComboBox fx:id="cbTypeAssurance" prefWidth="200.0" />
                <Label text="Date d'expiration :" />
                <DatePicker fx:id="dpDateExpiration" />
                <Label fx:id="lbMessage" textFill="RED" />
                <Button mnemonicParsing="false" onAction="#ajouterOuMettreAJourAssurance" text="Ajouter/Mettre à jour" />
            </VBox>

            <!-- Section inférieure : Listes des assurances et réclamations -->
            <VBox spacing="10" style="-fx-border-color: gray; -fx-padding: 10;">
                <Label text="Liste des assurances" style="-fx-font-weight: bold;" />
                <FlowPane fx:id="flowPaneAssurances" hgap="20" vgap="20" prefWidth="950.0" prefHeight="200.0" />
                <Label text="Liste des réclamations" style="-fx-font-weight: bold;" />
                <FlowPane fx:id="flowPaneReclamations" hgap="20" vgap="20" prefWidth="950.0" prefHeight="200.0" />
            </VBox>

            <!-- Section OCR -->
            <VBox>
                <Button fx:id="importButton" text="Importer un document" onAction="#handleSelectImage"/>
                <TextArea fx:id="textArea" promptText="Texte extrait affiché ici..." wrapText="true"/>
                <Button text="Exporter en PDF" onAction="#exporterEnPDF"/>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
