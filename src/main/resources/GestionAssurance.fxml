<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.text.Text?>

<ScrollPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionAssurance">

    <content>
        <AnchorPane prefHeight="720.0" prefWidth="1080.0">
            <children>
                <!-- Champ pour entrer le nom -->
                <Label layoutX="50.0" layoutY="100.0" text="Nom :" />
                <TextField fx:id="tfNom" layoutX="180.0" layoutY="95.0" promptText="Entrez le nom" />

                <!-- Champ pour choisir le type d'assurance -->
                <Label layoutX="50.0" layoutY="160.0" text="Type d'assurance :" />
                <ComboBox fx:id="cbTypeAssurance" layoutX="180.0" layoutY="155.0" prefWidth="200.0" />

                <!-- Champ pour sélectionner la date d'expiration -->
                <Label layoutX="50.0" layoutY="220.0" text="Date d'expiration :" />
                <DatePicker fx:id="dpDateExpiration" layoutX="180.0" layoutY="215.0" />

                <!-- Label pour afficher les messages d'erreur ou de confirmation -->
                <Label fx:id="lbMessage" layoutX="180.0" layoutY="270.0" textFill="RED" />

                <!-- Bouton pour ajouter une assurance -->
                <Button layoutX="180.0" layoutY="310.0" mnemonicParsing="false" onAction="#ajouterOuMettreAJourAssurance" text="Ajouter" />

                <!-- FlowPane pour afficher les assurances sous forme de cartes -->
                <FlowPane fx:id="flowPaneAssurances" layoutX="50.0" layoutY="380.0" hgap="20" vgap="20" prefWidth="950.0" prefHeight="300.0" />

                <!-- FlowPane pour afficher les réclamations -->
                <FlowPane fx:id="flowPaneReclamations" layoutX="50.0" layoutY="700.0" hgap="20" vgap="20" prefWidth="950.0" prefHeight="300.0" />

                <!-- Bouton pour tester les statistiques, aligné en haut à droite -->
                <Button layoutX="950.0" layoutY="20.0" text="Tester Stats" onAction="#testerStats" />

                <!-- Section pour afficher les résultats des statistiques -->
                <FlowPane fx:id="flowPaneStats" layoutX="50.0" layoutY="650.0" hgap="20" vgap="20" prefWidth="950.0" prefHeight="100.0">
                    <children>
                        <!-- Labels pour afficher les statistiques -->
                        <Label fx:id="lbTotal" text="Total: " />
                        <Label fx:id="lbEnAttente" text="En Attente: " />
                        <Label fx:id="lbEnCours" text="En Cours: " />
                        <Label fx:id="lbResolu" text="Résolu: " />
                        <Label fx:id="lbPourcentageResolues" text="Pourcentage Résolu: " />
                        <Label fx:id="lbDelaiMoyen" text="Délai Moyen (jours): " />
                    </children>
                </FlowPane>

                <!-- Graphique de type pie chart pour les statistiques -->
                <PieChart fx:id="pieChartStats" layoutX="650.0" layoutY="100.0" prefWidth="350.0" prefHeight="350.0" />
            </children>
        </AnchorPane>
    </content>

</ScrollPane>
