<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="311.0" prefWidth="502.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="tn.esprit.controllers.ForgotPasswordController">
    <children>
        <Label layoutX="139.0" layoutY="50.0" text="Mot de passe oublié">
         <font>
            <Font name="Lato Black" size="25.0" />
         </font></Label>
        <TextField fx:id="emailField" layoutX="103.0" layoutY="124.0" prefHeight="32.0" prefWidth="297.0" promptText="Entrez votre email">
         <font>
            <Font size="13.0" />
         </font></TextField>
        <Button fx:id="sendCodeButton" layoutX="163.0" layoutY="177.0" onAction="#handleSendCode" text="Envoyer le code de vérification" />
        <Hyperlink fx:id="backToLogin" layoutX="197.0" layoutY="209.0" onAction="#handleBackToLogin" text="Retour à la connexion" />
        <Label fx:id="errorMessage" text="" textFill="red" />
    </children>
</AnchorPane>
