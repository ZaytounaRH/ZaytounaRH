<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionEntretien">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="1080" prefHeight="720">
            <Label text="Ajouter un Entretien" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="Date :" />
                <DatePicker fx:id="dateEntretienPicker" />
            </HBox>

            <HBox spacing="10">
                <Label text="Heure :" />
                <Spinner fx:id="heureEntretienSpinner" prefWidth="70" />
                <Label text=":" />
                <Spinner fx:id="minuteEntretienSpinner" prefWidth="70" />
            </HBox>

            <HBox spacing="10">
                <Label text="Type :" />
                <ComboBox fx:id="typeEntretienComboBox" prefWidth="200" />
            </HBox>

            <HBox spacing="10">
                <Label text="Offre d'Emploi :" />
                <ComboBox fx:id="offreEmploiComboBox" prefWidth="200" />
            </HBox>

            <HBox spacing="10">
                <Label text="Commentaire :" />
                <TextField fx:id="commentaireField" prefWidth="200" />
            </HBox>

            <Button fx:id="ajouterButton" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </VBox>
    </children>
</AnchorPane>
