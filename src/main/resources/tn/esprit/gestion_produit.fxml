<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.getionfinanciere.controllers.GestionProduit">

   <stylesheets>
      <URL value="@Style.css" />
   </stylesheets>
   <children>
      <Label layoutX="67.0" layoutY="132.0" text="Nom du produit :" />
      <TextField fx:id="tfProduit" layoutX="240.0" layoutY="119.0" prefWidth="200.0" promptText="Saisir le nom du produit" />

      <Label layoutX="67.0" layoutY="200.0" text="Prix :" />
      <TextField fx:id="tfPrix" layoutX="240.0" layoutY="194.0" prefWidth="200.0" promptText="Saisir le prix" />

      <Label layoutX="67.0" layoutY="270.0" text="Fournisseur" />
      <ComboBox fx:id="nomFournisseur" layoutX="240.0" layoutY="264.0" prefWidth="200.0" promptText="Choisir un fournisseur" />
      <Button fx:id="ajouterButton" layoutX="278.0" layoutY="433.0" onAction="#ajouterProduit" prefHeight="20.0" prefWidth="100.0" text="Ajouter" />
      <Button fx:id="afficherButton" layoutX="467.0" layoutY="505.0" onAction="#afficherProduits" prefHeight="41.0" prefWidth="183.0" text="Afficher Produits" />
      <Button fx:id="retourButton" layoutX="38.0" layoutY="507.0" onAction="#retour" text="Retour" />
      <Label layoutX="271.0" layoutY="45.0" text="Saisir Produit">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
