        <Label fx:id="passwordError" layoutX="50" layoutY="230" textFill="RED" visible="false" />

        <Button fx:id="loginButton" layoutX="109.0" layoutY="263.0" onAction="#handleLogin" text="Se Connecter" />

        <Text layoutX="152.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenue Ã  ZitounaRH">
            <font>
                <Font name="Lato Black" size="29.0" />
            </font>
        </Text>

        <!-- Sign-Up Link -->
        <Hyperlink fx:id="signUpLink" layoutX="70.0" layoutY="320.0" text="Vous n'avez pas un compte ? S'inscrire" onAction="#goToSignUp" />

