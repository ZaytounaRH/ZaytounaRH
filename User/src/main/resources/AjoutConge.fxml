<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.AjoutConge"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white; -fx-padding: 20px;">

    <VBox spacing="15" alignment="CENTER">

        <Label text="Ajouter un Congé"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="Date:"/>
        <DatePicker fx:id="datePicker"/>

        <Label text="Heure d'Arrivée:"/>
        <TextField fx:id="heureArriveField" promptText="Saisir l'heure d'arrivée" />

        <Label text="Heure de Départ:"/>
        <TextField fx:id="heureDepartField" promptText="Saisir l'heure de départ" />

        <HBox spacing="10">
            <Button fx:id="btnAjouter"
                    text="Ajouter"
                    style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

            <Button fx:id="btnAnnuler"
                    text="Annuler"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
        </HBox>

    </VBox>
</AnchorPane>
