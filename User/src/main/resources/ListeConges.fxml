<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ListeConges"
      spacing="10"
      alignment="CENTER">

    <Label text="Liste des Congés" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Button fx:id="btnAjouterConge" text="Ajouter un congé" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    </HBox>

    <ScrollPane fitToWidth="true" prefHeight="500">
        <content>
            <VBox fx:id="cardContainer" spacing="10"/>
        </content>
    </ScrollPane>

    <Button fx:id="btnRetour" text="Retour" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 5 15;"/>
    <Button fx:id="btnExportExcel" text="Exporter en Excel" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" />

</VBox>
