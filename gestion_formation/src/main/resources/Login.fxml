<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.Login"
            prefHeight="720.0" prefWidth="1080.0" stylesheets="style.css">

    <TextField fx:id="emailField" layoutX="150" layoutY="100" promptText="Email"/>
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="150" promptText="Mot de passe"/>
    <Button fx:id="loginButton" layoutX="250" layoutY="200" text="Se connecter" onAction="#login" />

</AnchorPane>
